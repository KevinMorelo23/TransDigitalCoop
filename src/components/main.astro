    .video-container {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0 auto;
    padding: 16px;
}

/* Tamaño predeterminado (pantallas grandes como PC) */
.video-container iframe {
    width: 1080px;
    height: 608px;
    border-radius: 8px;
    box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease-in-out;
}

.video-container iframe:hover {
    transform: scale(1.1);
}

@media (max-width: 768px) {
    .video-container iframe {
        width: 90%;
        max-width: 600px;
        height: 200px;
        margin: 0 auto;
        display: block;
    }
}

