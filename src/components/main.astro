---
import logo from '../../public/tdc.png';
import eccomerce from '../../public/exomerce.png';
import virtualvent from '../../public/VirtualVentSVG.svg';
import Reds from '../../public/RedssAppSER.png';
import Tic from '../../public/Group.png';
---
<header class="flex justify-between items-center p-4 bg-[#fffdfd] shadow-lg sticky top-0 z-50">
    <!-- Logo -->
    <div class="logo">
      <img src={logo.src} alt="Transdigitalcoop" class="w-full size-12" />
    </div>
  
    <!-- Toggle Menu (Hamburger Icon) -->
    <div id="togglemenu" class="cursor-pointer md:hidden">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-menu-2">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        <path d="M4 6l16 0" />
        <path d="M4 12l16 0" />
        <path d="M4 18l16 0" />
      </svg>
    </div>
  
    <!-- Exit Menu (Close Icon) -->
    <div id="exitmenu" class="hidden cursor-pointer md:hidden">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-x">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        <path d="M18 6l-12 12" />
        <path d="M6 6l12 12" />
      </svg>
    </div>
  
    <!-- Navigation Links -->
    <div 
    id="navlinks" 
    class="hidden md:flex flex-col md:flex-row md:space-x-4 absolute md:relative top-20 md:top-auto left-0 md:left-auto bg-[#fffdfd] md:bg-transparent text-sm md:text-md w-full md:w-auto text-center md:text-start p-4 md:p-0 shadow-lg md:shadow-none"
>
    <ul class="flex flex-col gap-4 md:flex-row md:gap-6 w-full text-center md:text-start">
        <li><a href="/" class="hover:text-blue-500 transition-all duration-300">Nosotros</a></li>
        <li><a href="/" class="hover:text-blue-500 transition-all duration-300">Planes y Precios</a></li>
        <li><a href="/" class="hover:text-blue-500 transition-all duration-300">Contáctanos</a></li>
        <li><a href="/" class="hover:text-blue-500 transition-all duration-300">Rutas de aprendizaje</a></li>
        <li><a href="/" class="hover:text-blue-500 transition-all duration-300">Guías</a></li>
        <li><a href="/" class="hover:text-blue-500 transition-all duration-300">Inicio</a></li>
    </ul>
</div>

</header>
  

<script>
    // Seleccionar elementos
    const toggleMenu = document.getElementById("togglemenu");
    const exitMenu = document.getElementById("exitmenu");
    const navLinks = document.getElementById("navlinks");
  
    // Mostrar el menú
    toggleMenu.addEventListener("click", () => {
      navLinks.classList.remove("hidden");
      toggleMenu.classList.add("hidden");
      exitMenu.classList.remove("hidden");
    });
  
    // Ocultar el menú
    exitMenu.addEventListener("click", () => {
      navLinks.classList.add("hidden");
      toggleMenu.classList.remove("hidden");
      exitMenu.classList.add("hidden");
    });
  </script>
  

<section id="bg">
